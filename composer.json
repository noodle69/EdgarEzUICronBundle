{
  "name": "edgar/ez-uicron-bundle",
  "license": "GPL-2.0-only",
  "type": "ezplatform-bundle",
  "description": "eZ Platform Cron scheduler",
  "authors": [
    {
      "name": "Emmanuel DROUET"
    }
  ],
  "autoload": {
    "psr-4": {
      "Edgar\\EzUICronBundle\\": "src/bundle/",
      "Edgar\\EzUICron\\": "src/lib/"
    }
  },
  "autoload-dev": {
    "psr-4": { "Edgar\\EzUICronBundle\\Tests\\": "src/bundle/Tests" }
  },
  "require": {
    "php": ">=7.1",
    "ezsystems/ezpublish-kernel": "^7.0",
    "ezsystems/ezplatform-admin-ui": "^1.0",
    "edgar/cron-bundle": "~1.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "~2.7.1",
    "phpunit/phpunit": "^6.4"
  },
  "scripts": {
    "fix-cs": "@php ./vendor/bin/php-cs-fixer fix -v --show-progress=estimating"
  }
}
